generator client {
  provider     = "prisma-client"
  output       = "../src/generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Auth {
  id        Int            @id @default(autoincrement())
  userId    Int            @unique
  password  String
  otp       Int?
  status    AuthStatusEnum @default(Active)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  lastLogin DateTime?

  user User @relation(fields: [userId], references: [id])

  @@map("auths")
}

model Invitation {
  id         Int                  @id @default(autoincrement())
  email      String               @unique
  token      String               @unique
  role       UserRoleEnum         @default(User)
  department DepartmentEnum       @default(None)
  status     InvitationStatusEnum @default(Pending)
  createdAt  DateTime             @default(now())
  updatedAt  DateTime             @updatedAt

  @@map("invitations")
}

model User {
  id          Int            @id @default(autoincrement())
  email       String         @unique
  firstName   String
  lastName    String
  phone       String?
  image       String?
  otp         Int?
  permissions String[]       @default([])
  role        UserRoleEnum   @default(User)
  department  DepartmentEnum @default(None)
  status      UserStatusEnum @default(Active)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  auth        Auth?

  @@map("users")
}

model Program {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String
  bannerImage String?
  category    String // Educational, Medical, Business etc.
  subCategory String?
  isActive    Boolean   @default(false)
  startDate   DateTime?
  endDate     DateTime?

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  applications Application[]

  @@map("programs")
}

model Application {
  id            Int       @id @default(autoincrement())
  email         String
  firstName     String
  applicationNo String    @unique
  middleName    String?
  lastName      String
  dob           DateTime?
  gender        String?
  state         String?
  lga           String?
  village       String?
  address       String?
  ekpuk         String?
  phone         String

  nin       String
  passport  String?
  examsType String?

  status    String  @default("In Progress")
  type      String?
  programId Int

  comment String?

  program  Program @relation(fields: [programId], references: [id])
  complete Boolean @default(false)

  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  bankDetails    BankDetail?
  documentUpload DocumentUpload?
  schoolRecord   SchoolRecord?

  @@map("applications")
}

model BankDetail {
  applicationId Int         @unique
  accountNo     String
  accountName   String
  bankName      String
  application   Application @relation(fields: [applicationId], references: [id])
  complete      Boolean     @default(false)

  @@unique([applicationId, accountNo])
  @@map("bank_details")
}

model DocumentUpload {
  applicationId        Int         @unique
  schoolIdCard         String?
  certificateOfOrigin  String?
  ssceResult           String?
  birthCertificate     String?
  admissionLetter      String?
  lastSchoolFeeReceipt String?
  application          Application @relation(fields: [applicationId], references: [id])
  complete             Boolean     @default(false)

  @@map("document_uploads")
}

model SchoolRecord {
  applicationId   Int         @unique
  regNo           String?     @unique // school registration number
  level           Int?
  programDuration Int?
  school          String?
  faculty         String?
  department      String?
  nameOfSchool    String?
  subjectGrade    String?
  year            Int?
  application     Application @relation(fields: [applicationId], references: [id])
  complete        Boolean     @default(false)

  @@map("school_records")
}

enum UserRoleEnum {
  User
  Admin
  Editor
  Developer
  Student
  Contractor
}

enum UserStatusEnum {
  Active
  Inactive
  Suspended
  Blocked
}

enum InvitationStatusEnum {
  Pending
  Accepted
  Declined
}

enum AuthStatusEnum {
  Active
  Inactive
  Locked
}

// enum OfficeEnum {
//   None
//   Account
//   Manager
// }

enum DepartmentEnum {
  None
  HR
  IT
  Sales
  Marketing
  Finance
  Operations
  Legal
  Admin
}

model Asset {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  location    String
  assetNumber String   @unique
  imageUrl    String?
  assetType   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("assets")
}

model Contractor {
  id                   Int      @id @default(autoincrement())
  contractorNo         String   @unique
  oldRegNo             String?
  cacRegNo             String?
  companyName          String
  status               String   @default("ACTIVE")
  registrationCategory String?
  majorArea            String?
  subArea              String?
  stateOfOrigin        String?
  community            String?
  contactPerson        String?
  phone                String?
  email                String?
  notes                String?
  sourceSheet          String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  bids                 Bid[]

  @@map("contractors")
}

model Procurement {
  id                    Int                   @id @default(autoincrement())
  referenceNo           String                @unique
  title                 String
  category              String
  type                  String
  location              String
  description           String
  eligibilityCriteria   String?
  submissionDeadline    DateTime
  publishDate           DateTime              @default(now())
  status                ProcurementStatusEnum @default(draft)
  budgetEstimate        Float?
  preBidMeetingDate     DateTime?
  preBidMeetingLocation String?
  preBidNotes           String?
  tags                  String[]              @default([])
  contactEmail          String?
  contactPhone          String?
  createdBy             Int
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
  documents             ProcurementDocument[]
  bids                  Bid[]

  @@map("procurements")
}

model ProcurementDocument {
  id            Int         @id @default(autoincrement())
  procurementId Int
  name          String
  url           String
  mimeType      String?
  size          Int?
  createdAt     DateTime    @default(now())
  procurement   Procurement @relation(fields: [procurementId], references: [id], onDelete: Cascade)

  @@map("procurement_documents")
}

model Bid {
  id                    Int           @id @default(autoincrement())
  procurementId         Int
  contractorId          Int
  contractorNo          String
  contactName           String
  contactEmail          String
  contactPhone          String
  price                 Float?
  technicalProposalUrl  String?
  commercialProposalUrl String?
  otherFiles            String[]      @default([])
  notes                 String?
  status                BidStatusEnum @default(submitted)
  submittedAt           DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  procurement           Procurement   @relation(fields: [procurementId], references: [id], onDelete: Cascade)
  contractor            Contractor    @relation(fields: [contractorId], references: [id])
  events                BidEvent[]

  @@unique([procurementId, contractorId])
  @@map("bids")
}

model BidEvent {
  id        Int      @id @default(autoincrement())
  bidId     Int
  action    String
  actorId   Int?
  actorRole String?
  metadata  String?
  createdAt DateTime @default(now())
  bid       Bid      @relation(fields: [bidId], references: [id], onDelete: Cascade)

  @@map("bid_events")
}

enum ProcurementStatusEnum {
  draft
  published
  closed
  awarded
  archived
}

enum BidStatusEnum {
  submitted
  under_review
  accepted
  rejected
  withdrawn
  awarded
}
